<UserControl x:Class="AppUI.Views.MarkerRoiSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppUI.Views"
             xmlns:vm="clr-namespace:AppUI.ViewModels"
             mc:Ignorable="d"
             Background="{StaticResource BackBrush}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type vm:SliceViewer2DControlViewModel}">
                <local:SliceViewer2DControl />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SliceViewer3DControlViewModel}">
                <local:SliceViewer3DControl />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
        <Grid Width="1920" Height="1080">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <!-- ヘッダ -->
            <ContentControl Grid.Row="0" Content="{Binding HedaerControl}"/>

            <Grid Grid.Row="1" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="12*"/>
                </Grid.RowDefinitions>
                <UniformGrid Grid.Row="0" Columns="2">
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                               Style="{StaticResource TextBlockMarkerRoiImageTitle}">2D</TextBlock>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                               Style="{StaticResource TextBlockMarkerRoiImageTitle}">3D</TextBlock>
                </UniformGrid>
                <UniformGrid Grid.Row="1" Columns="2">
                    <Grid VerticalAlignment="Stretch" Margin="20,10">
                        <ContentControl Content="{Binding MainLeft}"/>
                    </Grid>
                    <Grid VerticalAlignment="Stretch" Margin="20,10">
                        <ContentControl Content="{Binding MainRight}"/>
                    </Grid>
                </UniformGrid>
            </Grid>
            
            <!-- フッタ -->
            <ContentControl Grid.Row="2" Content="{Binding FooterControl}"/>

        </Grid>
    </Viewbox>
</UserControl>
