<Window x:Class="AppUI.Views.Dialog.GenericDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppUI.Views"
             xmlns:vm="clr-namespace:AppUI.ViewModels.Dialog"
             mc:Ignorable="d" 
             Background="{StaticResource BackBrush}"
             Width="800" Height="370" WindowStyle="None">
    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockBase}"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <vm:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <vm:SharedSizeGroupConverter x:Key="SharedSizeGroupConverter"/>
    </Window.Resources>
    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
        <Grid x:Name="titleBar">
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding Row0Length}"/>
                <RowDefinition Height="{Binding Row1Length}"/>
                <RowDefinition Height="{Binding Row2Length}"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="False">
                <Button DockPanel.Dock="Right"
                        Width="125" VerticalAlignment="Stretch" Margin="0,10,10,10" 
                        Command="{Binding OnCloseButtonCommand}"
                        Visibility="{Binding IsCloseVisible, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                Text="&#xE8BB;"
                                VerticalAlignment="Center"
                                Margin="0,0,30,0"/>
                        <TextBlock Text="閉じる" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </DockPanel>

            <Grid Grid.Row="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ItemsControl 
                            ItemsSource="{Binding MessageLines}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Grid.IsSharedSizeScope="True"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"
                                                              SharedSizeGroup="{Binding Column2, Converter={StaticResource SharedSizeGroupConverter}}"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Text="{Binding Column1}"
                                            Style="{StaticResource TextBlockBase}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            FontSize="{Binding DataContext.DinamicFontSize, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                        <TextBlock Grid.Column="1"
                                            Text="{Binding Column2}"
                                            TextWrapping="Wrap"
                                            Style="{StaticResource TextBlockBase}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Visibility="{Binding Column2, Converter={StaticResource NullToVisibilityConverter}}"
                                            Margin="{Binding Margin}"
                                            FontSize="{Binding DataContext.DinamicFontSize, RelativeSource={RelativeSource AncestorType=Window}}"/>                                                  
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Column2}" Value="{x:Null}">
                                                        <Setter Property="Grid.ColumnSpan" Value="2"/>
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Grid>
                
                <ProgressBar Grid.Row="1" Height="20" Margin="30,10,30,10"
                     Minimum="0" Maximum="100"
                     HorizontalAlignment="Stretch"
                     Visibility="{Binding IsProgressVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                     IsIndeterminate="{Binding IsProgressDetermin}" 
                     Value="{Binding ProgressValue}"/>
            </Grid>

            <Grid Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,20">
                <ItemsControl Grid.Row="0" ItemsSource="{Binding Buttons}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Center"
                                Margin="20,0"
                                Content="{Binding Label}" Command="{Binding Command}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</Window>
